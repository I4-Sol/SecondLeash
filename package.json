{
  "name": "second-leash",
  "version": "1.0.0",
  "private": true,
  "description": "Mission-driven dog shelter internal management platform",
  "workspaces": [
    "apps/*",
    "infra/*"
  ],
  "scripts": {
    "dev:api": "npm run dev --workspace=apps/api",
    "dev:web": "npm run dev --workspace=apps/web",
    "build:api": "npm run build --workspace=apps/api",
    "build:web": "npm run build --workspace=apps/web",
    "test": "npm run test --workspaces",
    "migrate": "npm run migrate --workspace=infra/db",
    "seed": "npm run seed --workspace=infra/db",
    "docker:up": "docker compose up --build",
    "docker:down": "docker compose down",
    "lint": "eslint . --ext .ts,.tsx,.vue",
    "format": "prettier --write \"**/*.{ts,tsx,vue,json,md}\""
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^6.21.0",
    "@typescript-eslint/parser": "^6.21.0",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-vue": "^9.20.1",
    "pino-pretty": "^13.1.3",
    "prettier": "^3.2.4",
    "typescript": "^5.3.3"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  }
}
